extends ./layouts/index

block contenido
    main.container.mt-5 
        h1.text-center #{pagina}
        
        blockquote.text-center Lee sobre nuestros clientes y experiencias

        .row.testimoniales
            include ./layouts/bloque-testimoniales

        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un testimonial 

                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales" method="post")
                        .form-group 
                            label(for="nombre") Nombre:
                            Input#nombre(type="text", placeholder="Tu nombre", name="nombre", class="form-control" value=`${ nombre ? nombre : '' }`) 
                        .form-group 
                            label(for="correo") Correo electrónico:
                            Input#correo(type="text", placeholder="Tu Correo electrónico", name="correo", class="form-control"  value=`${ correo ? correo : '' }`) 
                        .form-group 
                            label(for="mensaje") Mensaje:
                            textarea#mensaje(name="mensaje", cols="30", rows="3" class="form-control") #{ mensaje ? mensaje : '' }
                        input.btn.btn-success.btn-block(type="submit" value="Agregar Testimonial ")
                       

